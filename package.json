{
	"name": "rover-ui",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:start": "docker compose up",
		"db:stop": "docker compose down",
		"db:test": "docker compose -f docker-compose.test.yml up",
		"db:test:stop": "docker compose -f docker-compose.test.yml down",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"migrate:test": "dotenv -e .env.test -- drizzle-kit migrate",
		"migrate:dev": "dotenv -e .env -- drizzle-kit migrate",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/leaflet": "^1.9.17",
		"@types/pg": "^8.11.11",
		"@types/supertest": "^6.0.3",
		"autoprefixer": "^10.4.20",
		"daisyui": "^4.12.23",
		"dotenv-cli": "^10.0.0",
		"drizzle-kit": "^0.30.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.10",
		"supertest": "^7.1.4",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.17",
		"tsx": "^4.19.2",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"drizzle-orm": "^0.38.4",
		"leaflet": "^1.9.4",
		"leaflet-control-geocoder": "^3.1.0",
		"leaflet-routing-machine": "^3.2.12",
		"pg": "^8.13.1",
		"postgres": "^3.4.5",
		"roslib": "^1.4.1"
	}
}
